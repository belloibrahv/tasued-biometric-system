# Environment Variables for TASUED Biometric System

# Database URL - Update this when deploying to Render
DATABASE_URL="postgresql://user:password@localhost:5432/tasued_biometric_system"

# JWT Secret for authentication
JWT_SECRET="tasued_biometric_system_secret_key_change_in_production"

# Encryption key for biometric data
ENCRYPTION_KEY="tasued_encryption_key_for_biometric_data_change_in_prod"

# API Keys for external services if needed
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Security settings
BCRYPT_SALT_ROUNDS=12

# File upload settings
MAX_FILE_SIZE=5000000 # 5MB in bytes
ALLOWED_FILE_TYPES=image/png,image/jpg,image/jpeg,application/pdf