# Database URL - Use your deployed database connection string
DATABASE_URL="postgresql://user:password@host:port/database_name"

# JWT Configuration
JWT_SECRET="set_a_strong_32_character_secret_here_for_production"
JWT_EXPIRES_IN="24h"

# Encryption Configuration
ENCRYPTION_KEY="set_your_32_character_encryption_key_here_for_prod"
BCRYPT_SALT_ROUNDS=12

# Application Configuration
NEXT_PUBLIC_API_URL="https://your-app-name.onrender.com"
NODE_ENV="production"

# CORS Configuration
CORS_ORIGIN="https://your-app-name.onrender.com"

# Security Headers
SECURE_COOKIES=true

# Rate Limiting
RATE_LIMIT_BIOMETRIC="100"
RATE_LIMIT_AUTH="5"
RATE_LIMIT_API="1000"

# File Upload Settings
MAX_BIOMETRIC_FILE_SIZE="5000000"  # 5MB in bytes
ALLOWED_FILE_TYPES="application/octet-stream,text/plain"

# Logging
AUDIT_LOGGING="true"
AUDIT_RETENTION_DAYS="90"